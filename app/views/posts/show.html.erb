<% provide(:title, "投稿編集") %>
<div class="post_show_image">
  <div class="container">
    <h1>投稿詳細</h1>
    <table class="table table-hover">
      <tbody>
        <tr>
          <th class="post_show_text"><%= Post.human_attribute_name(:id) %></th>
          <td class=post_show_text><%= @post.id %></td>
        </tr>
        <tr>
          <th class="post_show_text"><%= Post.human_attribute_name(:content) %></th>
          <td class="post_show_text"><%= @post.content %></td>
        </tr>
      </tbody>
    </table>
    <p>
      <%= link_to '編集', edit_post_path, class: 'btn btn-primary' %>&nbsp
      <%= link_to '削除', post_path, method: :delete, data: { confirm: 'この投稿を削除します。よろしいですか?'}, class: 'btn btn-danger' %>
    </p>
  </div>
</div>
